 if(WIN32)
   set(OS "win32")
@@ -24,7 +24,7 @@ if(WIN32)
   set(OS_LIBS wpcap.lib Packet.lib Ws2_32.lib Winmm.lib)
 elseif(UNIX)
   set(OS "linux")
